.c-select-address {
    position: absolute;
    left: 50%;
    top: 20px;
    width: 460px;
    margin-left: -230px;
}

.c-select-address .input-wrapper {
    float: left;
    width: 260px;
    margin-right: 20px;
}

.c-select-address .btn-wrapper {
    font-size: 0;
}

.c-select-address .ivu-btn {
    margin-right: 5px;
}