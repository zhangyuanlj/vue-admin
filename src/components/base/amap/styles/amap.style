.c-map-infowin .title {
    height: 40px;
    margin: 0 1px;
    overflow: hidden;
}

.c-map-infowin .title h4 {
    font-size: 14px;
    font-weight: 100;
    line-height: 40px;
    padding-left: 10px;
}

.c-map-infowin .close-win {
    margin-top: 10px;
    margin-right: 10px;
    cursor: pointer;
}

.c-map-infowin .info-title {
    background-color: #2d8cf0;
}

.c-map-infowin .success-title {
    background-color: #19be6b;
}

.c-map-infowin .warning-title {
    background-color: #ff9900;
}

.c-map-infowin .info-title h4, .c-map-infowin .info-title .close-win, .c-map-infowin .success-title h4, .c-map-infowin .success-title .close-win, .c-map-infowin .warning-title h4, .c-map-infowin .warning-title .close-win {
    color: #fff;
}

.c-map-infowin .con {
    min-height: 180px;
}

.c-map-infowin .detail-info {
    min-height: 140px;
    line-height: 30px;
    font-size: 14px;
    padding: 20px 15px;
}

.c-map-infowin .detail-footer {
    padding: 10px 15px;
    text-align: center;
    background-color: #f5f5f5;
    border-top: 1px solid #ddd;
}

.c-map-infowin .btn-group {
    display: inline-block;
    margin-right: 20px;
}

.c-map-infowin .btn-group:last-child {
    margin-right: 0;
}

